while True:
        import random
        numGerado = random.randint(0, 10)
        num = int(input('Adivinhe um numero entre 0 e 10: '))

        if num == numGerado:
            print('Voce acertou! O numero escolhido pelo computador e:', numGerado)
        else:
            print('Voce errou! O numero escolhido pelo computador e:', numGerado)
        
            resposta = str(input('Deseja sair? (s/n): '))
            if resposta.lower() == 's':
                print('Saindo do loop...')
                break
            print('Continuando no loop...')
